/***** Animators ***********************************************************/

fader FastGoAway
{
	DecayStart	0.2
	DecayTime	0.5
}

fader GoAway
{
	DecayStart	0.5
	DecayTime	1.0
}

fader GoAway2
{
	DecayStart	1.0
	DecayTime	3.0
}

colorchanger ToBlack
{
	FadeStart	0.5
	FadeTime	1.0
}

stretcher BloodStretcher
{
	StretchTime	10
	GoalY		2.0
}

slider BloodSlider
{
	SlideTime	10
	DistY		-132
}

combiner BloodSmearer
{
	BloodStretcher
	BloodSlider
}

decal SawChip
{
	pic SAWMARK
	fullbright
	shade "FF 99 33"
	x-scale 0.1
	y-scale 0.4
	randomflipx
	randomflipy
	animator ToBlack
}

